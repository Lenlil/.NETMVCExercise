                            <th scope="col">ColorHex</th>
                            <th scope="col">PantoneValue</th>
                            <th scope="col">GroupNo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var color in Model.Group1ColorList)
                        {
