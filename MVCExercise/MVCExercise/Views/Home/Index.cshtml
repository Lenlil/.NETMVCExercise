@model MVCExercise.ViewModels.DisplayColorsListViewModel

<div class="main-wrapper">
    <section class="service-area pt-100" id="feature">
        <div class="container">
            <h3>Colors</h3>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Group 1</th>
                        </tr>
                    </thead>
                    <thead>
